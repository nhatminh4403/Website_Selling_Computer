@model IEnumerable<Website_Selling_Computer.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}
@if (User.IsInRole("Admin"))
{
    <div class="text-center">
        <h1 class="display-4">Welcome to Admin View</h1>
        <div class="container py-5">
            <div class="row justify-content-center mb-3">
                <div class="col-md-12 col-xl-10">
                    <div class="card shadow-0 border rounded-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-xl-6">
                                    <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-detail btn-lg">Danh sách sản phẩm</a>
                                </div>
                                <div class="col-md-6 col-lg-6 col-xl-6">
                                    <a href="@Url.Action("Index", "ProductCategories", new { area = "Admin" })" class="btn btn-detail btn-lg">Danh sách danh mục</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container d-flex mt-4">
        <div class="col-md-9">
            <div class="row cols-md-3">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card">
                            <div class="card-image">
                                <a asp-action="Details" asp-area="Admin" asp-controller="Products" asp-route-id="@item.ProductID" class="btn">
                                    <img src="@Html.DisplayFor(modelItem => item.MainImage)" alt="Product Image" class="card-img-top">
                                </a>
                            </div>
                            <div class="card-innerFixedRatio">
                                <div class="text-center">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                                    <p class="text-muted mb-4">@Html.DisplayFor(modelItem => item.ProductCategory.Description)</p>
                                </div>
                                <div class="price">
                                    <span>@item.Price.ToString("#,##0") Vnđ</span>
                                </div>
                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <div class="d-flex flex-row">
                                        <span class="wishlist" title="Yêu thích"><i class="fa fa-heart"></i></span>
                                        <span title="Thêm vào giỏ hàng">
                                            <a asp-controller="Cart" asp-action="AddToCart"
                                               asp-route-productId="@item.ProductID" asp-route-quantity="@numOfQuantity">
                                                <button class="cart" id="button-no-outline">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </button>
                                            </a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="container py-5 text-center">
                                    <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-edit">Chỉnh sửa</a> |
                                    <a asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-detail">Xem chi tiết</a> |
                                    <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-delete">Xoá</a>
                                </div>
                            }
                            else
                            {
                                <div class="container py-5 text-center">
                                    | <a asp-area="Admin" asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-detail">Xem chi tiết</a> |
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
